{% extends "::Theme/Sterling/layout.html.twig" %}

{% block meta_title %}{{ neutron_seo_title(entity.seo) }}{% endblock %}
{% block meta_keywords %}{{ neutron_seo_keywords(entity.seo) }}{% endblock %}
{% block meta_description %}{{ neutron_seo_description(entity.seo) }}{% endblock %}

{% block page_banner_heading %} {% endblock %}

{% block page_banner_text %} 
    {% if entity.layout.enableBannerText %}
        {{ entity.layout.bannerText }}
    {% endif %} 
{% endblock %}

{% block search %}
    {% if entity.layout.enableSearch %}
         <div id="banner-search">
           <form method="get" class="searchform" action="#">
              <fieldset>
                 <input type="text" />
              </fieldset>
           </form>
        </div>
    {% endif %}
{% endblock %}

{% block content %}
    <div id="main-wrap" class="clearfix">
    {% for teamMember in entity.references %}
        <div class="member-wrap clearfix">
           <div class="member-contact">
              <p class="member-name">{{ teamMember.inversed.name }}</p>
              <p class="member-title">{{ teamMember.inversed.jobTitle }}</p>
              
              <ul class="member-list">
                  {% if teamMember.inversed.enableEmail %}
                      <li><a href="mailto:{{ teamMember.inversed.email }}" class="member-contact-email">{{ teamMember.inversed.email }}</a></li>
                  {% endif %}
                  {% if teamMember.inversed.enablePhone %}
                      <li class="member-contact-phone">{{ teamMember.inversed.phone }}</li>
                  {% endif %}
                  {% if teamMember.inversed.enableTwitter %}
                      <li><a target="_blank" href="http://twitter.com/{{ teamMember.inversed.twitter }}" class="member-contact-twitter">@{{ teamMember.inversed.twitter }}</a></li>
                  {% endif %}
                  {% if teamMember.inversed.enableGithub %}
                      <li><a target="_blank" href="http://github.com/{{ teamMember.inversed.github }}" class="member-contact-phone">@{{ teamMember.inversed.github }}</a></li>
                  {% endif %}
              </ul>
              
           </div>
           <!-- END member-contact -->
           <div class="member-bio">{{ teamMember.inversed.content|raw }}</div>
           <!-- END member-bio -->
           {% if teamMember.inversed.image.isActive %}
               <div class="member-photo img-frame member-frame">{{ neutron_image(teamMember.inversed.image, 'TeamMemberImage_thumb') }}</div>
           {% endif %}
        </div>
    {% endfor %}
    
     </div>
{% endblock %}





{% block footer_text %}
    {% if entity.layout.enableFooterText %}
        <div class="sidebar-widget">
            <div class="textwidget">
                <p><img src="{{ site_url }}themes/sterling/content-images/truethemes-premium-wordpress.png"  class="footer-logo"><br>
                   {{ entity.layout.footerText }}
                </p>
             </div>
         <!-- END textwidget -->
        </div>
        
    {% endif %}
{% endblock %}

{% block footer_widget_mailing_list %}
    {% if entity.layout.enableMailingList %}
        <div class="sidebar-widget">
        <p class="foot-heading">Join our Mailing List</p>
            <div id="mc_embed_signup">
                <form action="http://truethemes.us2.list-manage.com/subscribe/post?u=e2deed44e98de9950b14e7fb3&amp;id=47d7d9240b" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank">
                   <label for="mce-EMAIL">Email Address:</label>
                   <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="" required="">
                   <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
                </form>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block footer_widget_social_list %}
    {% if entity.layout.enableSocialList %}
    <div class="sidebar-widget">
        <p class="foot-heading">Connect with us</p>
        <ul class="social_icons">
            <li><a href="../Sterling/feed" class="rss">RSS</a></li>
            <li><a href="http://www.twitter.com/truethemes" class="twitter">Twitter</a></li>
            <li><a href="http://www.facebook.com/truethemes" class="facebook">Facebook</a></li>
        </ul>
    </div>
    {% endif %}
{% endblock %}
