<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="app.form.type.page.class">AppBundle\Form\Type\PageType</parameter>
        <parameter key="app.form.type.page.content.class">AppBundle\Form\Type\Page\ContentType</parameter>
        <parameter key="app.event_listener.navigation_menu.class">AppBundle\EventListener\NavigationMenuListener</parameter>
    </parameters>

    <services>
    
        <service id="app.form.type.page" class="%app.form.type.page.class%" scope="request">
            <argument type="service" id="request" />
            <tag name="form.type" alias="app_form_page" />
        </service>
        		
		<service id="app.form.type.page.content" class="%app.form.type.page.content.class%">
            <argument>%neutron_page.page_class%</argument>
            <argument>%neutron_page.templates%</argument>
            <tag name="form.type" alias="app_form_type_page_content" />
		</service>
		
        <service id="app.event_listener.navigation_menu" class="%app.event_listener.navigation_menu.class%">
        	<tag name="kernel.event_listener" event="neutron_admin.onMenuConfigure" method="onMenuConfigure"/> 
        </service>
    </services>

</container>
