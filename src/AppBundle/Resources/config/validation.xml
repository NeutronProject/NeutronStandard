<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">
    
    <class name="AppBundle\Entity\Layout">   
	    <property name="bannerText">
        	<constraint name="NotBlank">
                <option name="message">bannerText.blank</option>
                <option name="groups">
                    <value>banner_text_enabled</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">bannerText.short</option>
                <option name="groups">
                    <value>banner_text</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">500</option>
                <option name="message">bannerText.long</option>
                <option name="groups">
                    <value>banner_text</value>
                </option>
            </constraint>
        </property>
        
	    <property name="footerText">
        	<constraint name="NotBlank">
                <option name="message">footerText.blank</option>
                <option name="groups">
                    <value>footer_text_enabled</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">footerText.short</option>
                <option name="groups">
                    <value>footer_text</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">500</option>
                <option name="message">footerText.long</option>
                <option name="groups">
                    <value>footer_text</value>
                </option>
            </constraint>
        </property>
        
	    <property name="calloutBoxTitle">
        	<constraint name="NotBlank">
                <option name="message">calloutBoxTitle.blank</option>
                <option name="groups">
                    <value>callout_box_enabled</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">calloutBoxTitle.short</option>
                <option name="groups">
                    <value>callout_box</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">calloutBoxTitle.long</option>
                <option name="groups">
                    <value>callout_box</value>
                </option>
            </constraint>
        </property>
        
	    <property name="calloutBoxContent">
        	<constraint name="NotBlank">
                <option name="message">calloutBoxContent.blank</option>
                <option name="groups">
                    <value>callout_box_enabled</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">calloutBoxContent.short</option>
                <option name="groups">
                    <value>callout_box</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">500</option>
                <option name="message">calloutBoxContent.long</option>
                <option name="groups">
                    <value>callout_box</value>
                </option>
            </constraint>
        </property>
        
	    <property name="calloutBoxBtnText">
        	<constraint name="NotBlank">
                <option name="message">calloutBoxBtnText.blank</option>
                <option name="groups">
                    <value>callout_box_btn_enabled</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">calloutBoxBtnText.short</option>
                <option name="groups">
                    <value>callout_box_btn</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">50</option>
                <option name="message">calloutBoxBtnText.long</option>
                <option name="groups">
                    <value>callout_box_btn</value>
                </option>
            </constraint>
        </property>
        
	    <property name="calloutBoxReferenceName">
        	<constraint name="NotBlank">
                <option name="message">calloutBoxReferenceName.blank</option>
                <option name="groups">
                    <value>callout_box_btn_enabled</value>
                </option>
            </constraint>
        </property>
        
	    <property name="calloutBoxReferenceId">
        	<constraint name="NotBlank">
                <option name="message">calloutBoxReferenceId.blank</option>
                <option name="groups">
                    <value>callout_box_btn_enabled</value>
                </option>
            </constraint>
        </property>
        
    </class>

</constraint-mapping>
