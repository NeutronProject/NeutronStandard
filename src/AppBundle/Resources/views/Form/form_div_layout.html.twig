{% block neutron_toggle_button_row %}
{% spaceless %}
    <p>
        {{ form_widget(form) }} {{ form_label(form, label|default(null)) }}
        <span class="neutron_toggle_button" style="display:none">{{ configs|merge({'id': id})|json_encode|raw }}</span>
        {% if configs.desc is defined %} <br/><span class="smltxt">{{ configs.desc }}</span> {% endif %}
    </p>
{% endspaceless %}
{% endblock neutron_toggle_button_row %}

{% block neutron_buttonset_row %}
{% spaceless %}
    <p {{ block('widget_container_attributes') }}>
        {{ block('field_label') }}
        
        {% for child in form %}
            {{ form_widget(child) }} {{ form_label(child) }}
        {% endfor %}
        {% if configs.desc is defined %} <br/><span class="smltxt">{{ configs.desc }}</span> {% endif %}
    </p>
    <span class="neutron_buttonset" style="display:none">{{ configs|json_encode|raw }}</span>
    
{% endspaceless %}
{% endblock neutron_buttonset_row %}

